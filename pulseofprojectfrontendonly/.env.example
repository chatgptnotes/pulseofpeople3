# =====================================================
# PULSE OF PEOPLE - Environment Configuration Template
# =====================================================
# Copy this file to .env and update with your actual values

# =====================================================
# MULTI-TENANT MODE (Subdomain-based Routing)
# =====================================================
# Set to 'true' to enable multi-tenant subdomain routing
# When enabled, different subdomains will show different branding:
#   - http://bjp.localhost:5173 → BJP branding
#   - http://tvk.localhost:5173 → TVK branding
#   - http://demo.localhost:5173 → Demo branding
# Set to 'false' for single-tenant mode (uses default tenant)
VITE_MULTI_TENANT=true

# =====================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =====================================================
# Replace these with your actual Supabase credentials
# Get them from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=Pulse of People

# =====================================================
# DEVELOPMENT
# =====================================================

VITE_DEV_MODE=true
VITE_DEV_TENANT_SLUG=test-tenant
VITE_API_GATEWAY_URL=http://localhost:8787

# =====================================================
# TENANT CONFIGURATION
# =====================================================
# Tenant detection mode:
#   - subdomain: Extract tenant from subdomain (bjp.localhost:5173)
#   - path: Extract tenant from URL path (/bjp/dashboard)
#   - header: Extract tenant from X-Tenant-ID header
#   - token: Extract tenant from JWT token
VITE_TENANT_MODE=subdomain

# Default tenant to use when:
#   - VITE_MULTI_TENANT=false
#   - No subdomain detected
#   - Tenant not found in database
VITE_DEFAULT_TENANT=demo

# Tenant cache duration (minutes)
VITE_TENANT_CACHE_DURATION=5

# =====================================================
# FEATURE FLAGS
# =====================================================

VITE_ENABLE_SOCIAL_MEDIA=true
VITE_ENABLE_INFLUENCER_TRACKING=true
VITE_ENABLE_FIELD_REPORTS=true
VITE_ENABLE_SURVEYS=true
VITE_ENABLE_AI_INSIGHTS=true

# =====================================================
# REGIONAL SETTINGS
# =====================================================

VITE_DEFAULT_REGION=ap-south-1
VITE_DEFAULT_TIMEZONE=Asia/Kolkata
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_LANGUAGE=en

# =====================================================
# SUBSCRIPTION PRICING
# =====================================================

VITE_MONTHLY_FEE=6000
VITE_TRIAL_DAYS=14
VITE_GRACE_PERIOD_DAYS=7

# =====================================================
# RATE LIMITING
# =====================================================

VITE_MAX_API_CALLS_PER_HOUR=10000
VITE_MAX_STORAGE_GB=50
VITE_MAX_USERS=100

# =====================================================
# OPTIONAL: MULTI-TENANT CONFIGURATION
# (Only needed when VITE_MULTI_TENANT=true)
# =====================================================

# Tenant Registry (uncomment when ready to use multi-tenant mode)
# VITE_TENANT_REGISTRY_URL=https://registry.pulseofpeople.com
# VITE_TENANT_REGISTRY_ANON_KEY=your-registry-anon-key
# TENANT_REGISTRY_SERVICE_KEY=your-registry-service-key
# CREDENTIALS_ENCRYPTION_KEY=your-encryption-key-min-32-chars

# =====================================================
# OPTIONAL: DEPLOYMENT (Uncomment when deploying)
# =====================================================

# Cloudflare Workers
# CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Vercel
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-vercel-org-id
# VERCEL_PROJECT_ID=your-vercel-project-id

# =====================================================
# OPTIONAL: MONITORING & NOTIFICATIONS
# =====================================================
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Service (for tenant welcome emails)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@pulseofpeople.com

# =====================================================
# MONITORING
# =====================================================

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your-sentry-dsn

# Analytics
VITE_ANALYTICS_ID=your-analytics-id

# =====================================================
# FEATURE FLAGS
# =====================================================

VITE_ENABLE_SOCIAL_MEDIA=true
VITE_ENABLE_INFLUENCER_TRACKING=true
VITE_ENABLE_FIELD_REPORTS=true
VITE_ENABLE_SURVEYS=true
VITE_ENABLE_AI_INSIGHTS=true

# =====================================================
# REGIONAL SETTINGS
# =====================================================

VITE_DEFAULT_REGION=ap-south-1
VITE_DEFAULT_TIMEZONE=Asia/Kolkata
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_LANGUAGE=en

# =====================================================
# SUBSCRIPTION PRICING
# =====================================================

VITE_MONTHLY_FEE=6000
VITE_TRIAL_DAYS=14
VITE_GRACE_PERIOD_DAYS=7

# =====================================================
# RATE LIMITING
# =====================================================

VITE_MAX_API_CALLS_PER_HOUR=10000
VITE_MAX_STORAGE_GB=50
VITE_MAX_USERS=100

# =====================================================
# DEVELOPMENT
# =====================================================

# Development tenant (for testing multi-tenant locally)
VITE_DEV_TENANT_SLUG=test-tenant
VITE_DEV_MODE=false

# API Gateway URL (for local development)
VITE_API_GATEWAY_URL=http://localhost:8787

# =====================================================
# PRODUCTION URLS
# =====================================================

VITE_PRODUCTION_URL=https://pulseofpeople.com
VITE_APP_URL=https://app.pulseofpeople.com
VITE_API_URL=https://api.pulseofpeople.com
VITE_REGISTRY_URL=https://registry.pulseofpeople.com

# =====================================================
# SOCIAL MEDIA API CREDENTIALS (TVK Official Accounts)
# =====================================================
# Hybrid approach: Real data for TVK accounts + Estimated aggregated data
# Get your credentials from respective developer portals

# Facebook Page API (Meta Graph API)
# Get from: https://developers.facebook.com/apps/ → Your App → Settings → Basic
# Guide: https://developers.facebook.com/docs/pages/access-tokens
VITE_FACEBOOK_PAGE_ID=
VITE_FACEBOOK_ACCESS_TOKEN=

# Instagram Business Account API (Meta Graph API)
# Get from: https://developers.facebook.com/apps/ → Your App → Instagram Basic Display
# Guide: https://developers.facebook.com/docs/instagram-api/getting-started
VITE_INSTAGRAM_ACCOUNT_ID=
VITE_INSTAGRAM_ACCESS_TOKEN=

# Twitter/X API v2
# Get from: https://developer.twitter.com/en/portal/projects-and-apps
# Guide: https://developer.twitter.com/en/docs/authentication/oauth-2-0/bearer-tokens
VITE_TWITTER_ACCOUNT_ID=
VITE_TWITTER_BEARER_TOKEN=

# YouTube Data API v3
# Get from: https://console.cloud.google.com/apis/credentials
# Guide: https://developers.google.com/youtube/v3/getting-started
VITE_YOUTUBE_CHANNEL_ID=
VITE_YOUTUBE_API_KEY=

# =====================================================
# OPTIONAL: Third-Party Social Monitoring (Premium)
# =====================================================

# Brandwatch API (Optional - Enterprise social listening)
# Get from: https://www.brandwatch.com/
VITE_BRANDWATCH_API_KEY=
VITE_BRANDWATCH_PROJECT_ID=

# Mention API (Optional - Brand mentions tracking)
# Get from: https://mention.com/en/api/
VITE_MENTION_API_TOKEN=
VITE_MENTION_ACCOUNT_ID=

# =====================================================
# MAPBOX (For interactive maps)
# =====================================================
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# =====================================================
# ELEVENLABS (AI Voice Calling for Voter Sentiment Analysis)
# =====================================================
# Get from: https://elevenlabs.io/app/settings → API Keys
# Guide: https://docs.elevenlabs.io/api-reference/authentication
#
# Setup Steps:
# 1. Create API Key: https://elevenlabs.io/app/settings → API Keys
# 2. Create Agent: https://elevenlabs.io/app/conversational-ai → Create Agent
# 3. Add Phone Number: https://elevenlabs.io/app/conversational-ai/phone-numbers
#    - Choose "Twilio" integration
#    - Copy the phone_number_id after setup
VITE_ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
VITE_ELEVENLABS_AGENT_ID=your-conversational-agent-id-here
VITE_ELEVENLABS_PHONE_NUMBER_ID=your-phone-number-id-here